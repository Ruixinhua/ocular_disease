{
    "name": "test",
    "n_gpu": 1,

    "arch": {
        "type": "PretrainedModel",
        "args": {
        }
    },
    "data_loader": {
        "type": "OcularDataloader",
        "args":{
            "train_df_path": "dataset/train_df_aug.csv",
            "valid_df_path": "dataset/valid_df.csv",
            "dataset_path": "dataset/train_aug/",
            "img_size": 224,
            "down_sampling": false,
            "batch_size": 32,
            "shuffle": true,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-3,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_loss",
    "metrics": [
        "auc", "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.9
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "max val_auc",
        "early_stop": 5,

        "tensorboard": true
    }
}
